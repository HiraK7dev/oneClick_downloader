{
  "manifest_version": 3,
  "name": "oneClick_downloader",
  "description": "Downloads YouTube videos with a single button click",
  "version": "1.0",
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "matches": [
        "https://www.youtube.com/"
      ]
    }
  ]
}